{
    "name": "wucdbm/quick-ui-bundle",
    "type": "symfony-bundle",
    "description": "Quick UI helpers for Symfony projects",
    "keywords": [
        "symfony ui",
        "symfony quick ui",
        "wucdbm"
    ],
    "authors": [
        {
            "name": "Martin Kirilov",
            "email": "wucdbm@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.0",
        "symfony/framework-bundle": "~3.0|4.0",
        "symfony/form": "~3.0|~4.0",
        "symfony/doctrine-bridge": "~3.0|~4.0",
        "doctrine/orm": "~2.5",
        "twig/twig": "~1.0|~2.0"
    },
    "require-dev": {
        "wucdbm/php-cs-fixers": "^0.3.0"
    },
    "autoload": {
        "psr-4": {
            "Wucdbm\\Bundle\\QuickUIBundle\\": "src"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "license": "MIT"
}
